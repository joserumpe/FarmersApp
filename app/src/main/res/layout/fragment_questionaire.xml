<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.guzman.dcf.QuestionaireFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lnone"
        android:layout_margin="16dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/coloRed"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/coloRed"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/coloRed"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/employment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Employement"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/coloRed"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/landsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Land Size"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/coloRed"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/impotantcrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Important Crops"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Percentage Contribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Purpose of planting the crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income" />

            <CheckBox
                android:id="@+id/consumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumption" />
            <CheckBox
                android:id="@+id/relatives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relatives" />
        </LinearLayout>
        <TextView
            android:textColorHint="@color/coloRed"
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="To what extend does the crop contribute to income?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small" />

            <CheckBox
                android:id="@+id/avarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avarage" />
            <CheckBox
                android:id="@+id/large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large" />
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="years Of Cultivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Any form of training on cultivation of the crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/yes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Cropping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Do you mix th crop with others?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/yep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/nop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </LinearLayout>
        <TextView
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Do you rotate the crops with others?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/yes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Knowledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/coloRed"
            android:paddingTop="12dp"
            android:text="Do you know what virus diseases are?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/yes3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/no3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </LinearLayout>
        <Button
            android:textColor="@color/coloRed"
            android:id="@+id/btnSaveAnwsers"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save"
            android:background="@drawable/custom_button"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    </ScrollView>
    </android.support.design.widget.CoordinatorLayout>


